{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
	{% if 'toMany' == field.customOptions.get('associationType') %}
		<span class="badge rounded-pill badge-light-danger"> {{ field.formattedValue }}</span>
{% else %}
	{% if field.customOptions.get('relatedUrl') is not null %}
		{% if field.property == "type_indicateur" or field.property == "parent_id"  %}
			<a class="badge rounded-pill badge-light-warning" href="{{ field.customOptions.get('relatedUrl') }}">{{ field.formattedValue }}</a>
		{% else %}
			<a href="{{ field.customOptions.get('relatedUrl') }}">{{ field.formattedValue }}</a>
		{% endif %}

	{% else %}
		{{ field.formattedValue }}
	{% endif %}
{% endif %}
